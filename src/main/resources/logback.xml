<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36}:%line - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="app.owlcms.replay.OBSReplayTest" level="debug"/>

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
